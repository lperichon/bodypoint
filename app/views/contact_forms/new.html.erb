  <% f.inputs do %>
    <%= f.input :name, :label => 'Nombre y apellido' %>
    <%= f.input :email, :label => 'Email' %>
    <% f.inputs :class => 'field-group' do %>
      <%= f.input :telephone, :label => 'TelÃ©fono' %>
